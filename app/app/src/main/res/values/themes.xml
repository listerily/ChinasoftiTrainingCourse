<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IdentityCardOCR" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/gray_234</item>
        <item name="colorOnPrimary">@color/gray_235</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_233</item>
        <item name="colorSecondaryVariant">@color/gray_234</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Customize your theme here. -->
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.IdentityCardOCR.DarkActionBar">
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/gray_235</item>
        <item name="colorPrimary">@color/gray_235</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Theme.IdentityCardOCR.NoActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.IdentityCardOCR.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.IdentityCardOCR.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF3488FF</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#004FBF</item>
    </style>
</resources>